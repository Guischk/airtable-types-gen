{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    // Enable local resolution of the package during tests so generated files that
    // re-export from "airtable-types-gen/runtime" can be type-checked without publishing.
    "baseUrl": ".",
    "paths": {
      "airtable-types-gen": ["../src/index.ts"],
      "airtable-types-gen/runtime": ["../src/runtime/index.ts"]
    }
  },
  "include": [
    "src/**/*",
    "generated/**/*"
  ]
}